<div>
{{#each regError}}
    <h2 class="errMsg">{{this.message}}</h2>
{{/each}}
</div>

<div class="container mt-4">
    <div class="row">
        <div class="col-12 col-sm-8 col-md-6 col-lg-4 mx-auto">
            <div class="header">
                <h1>Moderator Sign-In</h1>
            </div>

            <!-- Display any error or success messages -->
            <div>
                {{> message}}
            </div>

            <!-- Login form -->
            <form action="/moderators/login" method="POST">
                <div class="form-group">
                    <input type="username" id="username" name="username" placeholder="Enter username" maxlength="40" required />
                </div>
                <br>
                <div class="form-group">
                    <input type="password" id="password" name="password" placeholder="Enter password" maxlength="20" required />
                </div>
                <br>
                <div class="form-group">
                    <button type="submit" id="submit">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>