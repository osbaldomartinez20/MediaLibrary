{{!-- Container for account manipulations --}}
<div class="account_container mt-4">
    <!-- Display successfully listing item message -->
    <div class="col-5 mx-auto">
        {{> message}}
    </div>
    <h1>Welcome to your Dashboard, {{loggedIn.username}}!</h1>
</div>

<script type="text/javascript" src="/js/sortTable.js"></script>

<div class="tab-content">
    <div class="tab-pane fade show active" id="items_forSale_tab">

        {{!-- Container for the post section --}}
        <div class="post_container">
            <h2 id="TableTitle">Your Image Posts</h2>
            {{#if post}}
            <table id="imageTable" class="table">
                <colgroup>
                    <col span="1" style="width: 10%;">
                    <col span="1" style="width: 20%;">
                    <col span="1" style="width: 35%;">
                    <col span="1" style="width: 25%;">
                    <col span="1" style="width: 10%;">
                </colgroup>
                <tbody>
                    <tr class="tr">
                        <th class="th">Image</th>
                        <th class="th pointer" onclick="sortTable(1)">Title</th>
                        <th class="th pointer" onclick="sortTable(2)">Description</th>
                        <th class="th pointer" onclick="sortTable(3)">Date Posted</th>
                        <th class="th">Actions</th>
                    </tr>
                    {{#each post}}
                    <tr class="tr">
                        <td class="th"><a href="/imageCard/{{this.pid}}"><img
                                    src="/images/uploads/{{this.userid}}/postImages/{{this.filename}}"
                                    width="50" height="60" />
                            </a></td>
                        <td class="th"><span class="post_info"><a href="/imageCard/{{this.pid}}">{{this.title}}</a></td>
                        <td class="th" id="dDes">{{this.description}}</td>
                        <td class="th"><span class="post_info">{{this.date}}</td>
                        <td class="th"><a href="/imageCard/{{this.pid}}/edit" id="edit_button"><button>Edit</button></a>
                            &nbsp;&nbsp;<a href="/imageCard/{{this.pid}}/confirmDelete"
                                    id="delete_button"><button id="del_b">Delete</button></a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{else}}
            <ul id="postImages" class="postImages px-0"></ul>
            <li class="table-row">
                No posts.
            </li>
            <ul></ul>
            {{/if}}
        </div>
    </div>
</div>