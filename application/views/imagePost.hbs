<div class="header">
    <h1>Posting Information</h1>
</div>
<br>
<div class="col-5 mx-auto">
    {{> message}}
</div>

<!-- Postimage form -->
<script type="text/javascript" src="/js/imagePreview.js"></script>
<div>
    <form action="/post" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <h5>Title</h5>
            <input type="text" id="title" name="title" class="form-control" placeholder="Enter a title" maxlength="40"
                required />
        </div>

        <div class="form-group">
            <h5>Description</h5>
            <textarea class="form-control" rows="5" id="description" name="description"
                placeholder="Please enter description here" required></textarea>
        </div>

        <div class="form-group">
            <h5>Add Image Here</h5>
            <div>
                <label for="postImage" id="imageLabel">Choose up to 1 image to upload (PNG,
                    JPG)<br></label>
                <br>
                <input type="file" name="postImage" id="image" accept="image/png,image/jpg,image/jpeg" required />
            </div>
            <div class="preview">
                <img id="img" width="100" height="120"/>
            </div>
        </div>
        <br>

        <div class="form-group form-check">
            <input type="checkbox" class="form-check-input" name="terms" required>
            <label class="form-check-label" for="terms">I agree to the <a href="#">Terms</a> and
                that I have read the <a href="#">Use Policy for uploading images</a>.</label>
        </div>
        <br>

        <div class="row justify-content-end mx-0">
            <button type="reset" class="btn btn-danger"
                id="resetForm">Reset</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <button type="submit" class="btn btn-success" id="submit">Submit</button>
            <div id="card-stack"></div>
        </div>

    </form>
</div>