<div class="header">
    <h1>Posting Information</h1>
</div>
<br>
<div class="col-5 mx-auto">
    {{> message}}
</div>

<!-- Postimage form -->
<script type="text/javascript" src="/js/imagePreview.js"></script>
<div>
    <form action="/post" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <h5>English/Romanji Title</h5>
            <input type="text" id="title" name="title" class="form-control" placeholder="Enter a title" maxlength="40"
                required />
        </div>

        <div class="form-group">
            <h5>Japanese Title</h5>
            <input type="text" id="japTitle" name="japTitle" class="form-control" 
            placeholder="Enter a title in japanese(optional)" maxlength="40"/>
        </div>

        <div class="form-group">
            <h5>Author</h5>
            <input type="text" id="author" name="author" class="form-control" 
            placeholder="Enter the author's name. Prferably in the format Romanji/Japanese text" maxlength="40"/>
        </div>

        <div class="form-group">
            <h5>Description</h5>
            <textarea class="form-control" rows="5" id="description" name="description"
                placeholder="Please enter description here" maxlength="250" required></textarea>
        </div>

        <div class="form-group">
            <h5>Tags</h5>
            <input type="text" id="tags" name="tags" class="form-control" 
            placeholder="Enter the tags that describe the work. Separate each tag by a space, ex: MILF Yuri etc"/>
        </div>

        <div class="form-group">
            <h5>Add Cover Image Here</h5>
            <div>
                <label for="coverImage" id="imageLabel">Choose up to 1 image to upload (PNG,
                    JPG)<br></label>
                <br>
                <input type="file" name="coverImage" id="coverImage" accept="image/png,image/jpg,image/jpeg" />
            </div>
            <div class="preview">
                <img id="img" width="100" height="120"/>
            </div>
        </div>
        <br>

        <div class="form-group">
            <h5>Add Manga Image Here</h5>
            <div>
                <label for="mangaImage" id="imageLabel2">Choose up to 1 image to upload (PNG,
                    JPG)<br></label>
                <br>
                <input type="file" name="mangaImage" id="mangaImage" accept="image/png,image/jpg,image/jpeg" required />
            </div>
            <div class="preview">
                <img id="img" width="100" height="120"/>
            </div>
        </div>
        <br>

        <div class="row justify-content-end mx-0">
            <button type="reset" class="btn btn-danger"
                id="resetForm">Reset</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <button type="submit" class="btn btn-success" id="submit">Submit</button>
            <div id="card-stack"></div>
        </div>

    </form>
</div>