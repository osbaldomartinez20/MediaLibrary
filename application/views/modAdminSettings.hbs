<!-- Display any error or success messages -->
<div class="header">
    <h1>Change Password</h1>
</div>
<br>

<!-- Registration form -->
<div>
    <form {{#if loggedIn.id}}action="/moderators/changepass" {{/if}} {{#if loggedIn.aid}}action="/masteradmin/changepass"
        {{/if}} method="POST">
        <div>
            <input type="password" id="password" name="password"
                placeholder="Create a new password (8-20 characters)" minlength="8" maxlength="20" required />
        </div>
        <div>
            <input type="password" id="confirmPassword" name="confirmPassword"
                placeholder="Confirm password" minlength="8" maxlength="20" required />
        </div>
        <br>
        <div>
            <button type="submit">Submit</button>
        </div>
    </form>
</div>